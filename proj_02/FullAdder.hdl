/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=b, b=c, sum=ac, carry=d0);
    HalfAdder(a=a, b=ac, sum=sum, carry=d1);
    Or(a=d0, b=d1, out=carry);
}
